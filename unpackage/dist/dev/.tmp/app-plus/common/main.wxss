/*每个页面公共css */
page {
	background-color: #f1f1f1;
	font-size: 28rpx;
	color: #333;
	font-family: Helvetica Neue, Helvetica, sans-serif;
	height: 100%;
	--prink: #FA9EB6;
	--prink-line: #FA9EB6;
	--prink-bg: #FA9EB6;
}
view {
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.bg-prink {
	background-color: var(--prink-bg);
	border: 1px solid var(--prink-line);
	color: #FFFFFF;
}
.borderRadius {
	border-radius: 50rpx;
}
.flex {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
}
.prink {
	color: var(--prink);
}
.space-around {
	-webkit-justify-content: space-around;
	    -ms-flex-pack: distribute;
	        justify-content: space-around;
}
.text-center {
	text-align: center;
}
.card-swiper {
	height: 420rpx !important;
}
.card-swiper .swiper-box {
	width: 610rpx !important;
	left: 70rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	padding: 40rpx 0rpx 70rpx;
	overflow: initial;
}
.card-swiper .swiper-box .swiper-item {
	width: 100%;
	display: block;
	height: 100%;
	border-radius: 10rpx;
	-webkit-transform: scale(0.9);
	    -ms-transform: scale(0.9);
	        transform: scale(0.9);
	-webkit-transition: all 0.2s ease-in 0s;
	-o-transition: all 0.2s ease-in 0s;
	transition: all 0.2s ease-in 0s;
	overflow: hidden;
}
.card-swiper .swiper-box.cur .swiper-item {
	-webkit-transform: none;
	    -ms-transform: none;
	        transform: none;
	-webkit-transition: all 0.2s ease-in 0s;
	-o-transition: all 0.2s ease-in 0s;
	transition: all 0.2s ease-in 0s;
}
image {
	max-width: 100%;
	display: inline-block;
	position: relative;
	z-index: 0;
}
.swiper-item image {
	width: 100%;
	display: block;
	height: 100%;
	margin: 0;
	pointer-events: none;
}
.card {
	border-radius: 10rpx;
	overflow: hidden;
}
.box-shadow {
	-webkit-box-shadow: 0rpx 40rpx 100rpx 0rpx rgba(0, 0, 0, 0.07);
	        box-shadow: 0rpx 40rpx 100rpx 0rpx rgba(0, 0, 0, 0.07);
}
/* 公共颜色 */
.btn-bg-pink {
	background-color: var(--prink) !important;
}
.btn-bg-pink::after {
	content: " ";
	width: 200%;
	height: 200%;
	position: absolute;
	top: 0;
	left: 0;
	border: 1px solid var(--prink) !important;
	-webkit-transform: scale(.5);
	-ms-transform: scale(.5);
	    transform: scale(.5);
	-webkit-transform-origin: 0 0;
	-ms-transform-origin: 0 0;
	    transform-origin: 0 0;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	border-radius: 10px;
}
.swiper-mendian .uni-swiper-dot-active {
	width: 36rpx;
	height: 16rpx;
	border-radius: 8rpx;
	background-color: red !important;
	background-color: #FAA2B9;
	background-image: -o-linear-gradient(top, #FAC5D3, #FAA2B9);
	background-image: -webkit-gradient(linear, left top, left bottom, from(#FAC5D3), to(#FAA2B9));
	background-image: linear-gradient(top, #FAC5D3, #FAA2B9);
	background-repeat: repeat-x;
}
